@using AisLogistics.App.Models.DTO.Information
@model InformationDetails
<style>
    .modal-header {
        border-bottom:none !important;
    }
        b {
        font-weight: 700;
        font-size: 16px;
        line-height: 19px;
        letter-spacing: 0.035em;
        color: #172359;
    }

    .modal-employeeFio {
        font-weight: 400;
        font-size: 14px;
        line-height: 17px;
        letter-spacing: 0.035em;
        color: #B5B5B5;
    }

    .modal-text {
        font-weight: 400;
        font-size: 14px;
        line-height: 17px;
        letter-spacing: 0.035em;
        color: #172359;
    }

    .modal-employeeJob {
        font-style: normal;
        font-weight: 400;
        font-size: 12px;
        line-height: 14px;
        letter-spacing: 0.035em;
        color: #B5B5B5;
    }

    .modal-annex {
        font-weight: 400;
        font-size: 14px;
        line-height: 17px;
        letter-spacing: 0.035em;
        color: #172359;
    }

    .dateAdd {
        font-weight: 400;
        font-size: 12px;
        line-height: 14px;
        letter-spacing: 0.035em;
        color: #B5B5B5;
    }

    .statuse {
        font-weight: 700;
        font-size: 14px;
        line-height: 17px;
        letter-spacing: 0.035em;
        color: #FFFFFF;
    }

    .btn-grin {
        background: #1CB92B;
        border-radius: 2.59753px;
        height: 35px;
    }

    .btn-read {
        width: 161px;
        height: 35px;
        background: #FF2222;
        border-radius: 2.59753px;
    }

    .topic-modal {
        font-weight: 700;
        font-size: 18px;
        line-height: 22px;
        letter-spacing: 0.035em;
        color: #172359;
    }

    .file-text
    {
        font-weight: 400;
        font-size: 12px;
        line-height: 14px;
        text-align: center;
        letter-spacing: 0.035em;
        color: #172359;
    }
  .modal-dialog-scrollable .modal-content {
        max-height: 100%;
        overflow: hidden;
        position: fixed;
        width: 46vw;
        height: 45vh;
        left: 27%;
        top: 27% !important;
        background: #FFFFFF;
        border-radius: 3px;
}

    .modal-header, .modal-body {
        padding-left: 36px !important;
        padding-right: 29px !important;
    } 
    .modal-header{
         
     }

    .modal-footer {
        display: none;
    }

    .pdf {
        content: url("/assets/img/file/pdf.png") !important;
    }

    .png {
        content: url("/assets/img/file/png.jpg") !important;
    }

    .word, .doc, .docx, .dotx, .dotm, docb {
        content: url("/assets/img/file/word.jpg") !important;
    }

    .excel, .xlsx, .xls, .xlt, .xlm, .xll, .xla8, .xla5, xla_, .xlsm, .xltx, .xltm, .xlsb, .xla, .xlam, .xlw {
        content: url("/assets/img/file/exsl.jpg") !important;
    }

    .file-icon {
        width: 50px !important;
        height: 65px !important;
    }

    .file-icon:hover {
        color: #077EFA !important;
    }
</style>

<fieldset>
    <div class="row justify-content-between">
        <div class="col-sm-12 col-lg-auto">
            <p class="mb-0 modal-employeeFio">@Model.EmployeeFio</p>
            <p class="modal-employeeJob mb-1">@Model.EmployeeJob</p>
        </div>
        <div class="col-sm-12 col-lg-auto dateAdd">
            @Model.DateAdd.ToString("D")
        </div>
        <div class="ms-sm-2 ms-lg-auto mt-sm-2 mt-lg-0 col-sm-9 col-lg-4 btn-grin d-flex align-items-center justify-content-center">
            <div class="statuse"><img src="~/img/check-mark.png"/> Ознакомлен</div>
        </div>
    </div>
    <p class="m-0 mt-3 topic-modal">@Model.Topic</p>
    <p class="modal-text mt-3">@Model.Text</p>
    <p class="modal-annex mt-3">Приложения:</p>
    @if (Model.Files.Any())
    {
        <div class="row">
            @foreach (var item in Model.Files)
            {
                <a asp-action="DownloadBlank" asp-controller="Cases" asp-route-id="item.Id" asp-route-serviceId="item.ServiceId" target="_blank" class="col-2">
                    <div class="row justify-content-center">
                        <div class="col-5">
                            <div class="file-icon @item.FileExtensions.Substring(1)"></div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <p class="mb-1 file-text">@item.FileName@item.FileExtensions</p>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
</fieldset>


