    getDictionaries();
    var formContent = document.getElementById("smev-data-form-content"),
        smevForm = {
            init: () => {
                getDictionaries();
                $(formContent).find('.required').each(function() {
                    addValidation($(this));
                });

                $(formContent).find('[data-disabled]').each(function() {
