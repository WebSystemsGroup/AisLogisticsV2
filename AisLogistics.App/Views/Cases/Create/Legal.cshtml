                            <span class="bs-stepper-circle">4</span>
                            <span class="bs-stepper-label">
                                <span class="bs-stepper-title">Поставщик</span>
                                <span class="bs-stepper-subtitle">Поставщик услуги</span>
                            </span>
                        </button>
                    </div>
                    <div class="line"><i class="bx bx-chevron-right"></i></div>
                    <div class="step" data-target="#final-step">
                        <button type="button" class="step-trigger">
                            <span class="bs-stepper-circle">5</span>
                            <span class="bs-stepper-label">
                                <span class="bs-stepper-title">Результат</span>
                                <span class="bs-stepper-subtitle">Результат обращения</span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="bs-stepper-content">
                    <form onSubmit="return false" id="create-case-wizard-form" autocomplete="off">
                        <!-- Services & Tariff -->
                        <div id="service-step" class="content">
                            <div class="content-header mb-3">
                                <h6 class="mb-0">Услуги</h6>
                                <small>Выберите оказываемую услугу.</small>
                            </div>
                            <div class="row g-3">
                                <div class="pb-2">
                                    <div id="service-content">
