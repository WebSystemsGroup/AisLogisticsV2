@model AisLogistics.App.ViewModels.Cases.SmevCreateResponseModel
@{
}

<div id="wizard-smev-create" class="bs-stepper wizard-icons wizard-icons-example wizard-modern">
    <input asp-for="ServiceId" type="hidden" />
    <div class="bs-stepper-header m-auto border-0 w-75">
        <div class="step" data-target="#smev-request">
            <button type="button" class="step-trigger">
                <span class="bs-stepper-icon">
                    <svg viewBox="0 0 58 54">
                        <use xlink:href="../../assets/svg/icons/wizard-checkout-cart.svg#wizardCart"></use>
                    </svg>
                </span>
                <span class="bs-stepper-label">Запрос</span>
            </button>
        </div>
        <div class="line">
            <i class="bi bi-chevron-right "></i>
        </div>
        <div class="step" data-target="#smev-data">
            <button type="button" class="step-trigger">
                <span class="bs-stepper-icon">
                    <svg viewBox="0 0 54 54">
                        <use xlink:href="../../assets/svg/icons/wizard-checkout-address.svg#wizardCheckoutAddress"></use>
                    </svg>
                </span>
                <span class="bs-stepper-label">Данные</span>
            </button>
        </div>
        <div class="line">
            <i class="bi bi-chevron-right "></i>
        </div>
        <div class="step" data-target="#smev-result">
            <button type="button" class="step-trigger">
                <span class="bs-stepper-icon">
                    <svg viewBox="0 0 58 54">
                        <use xlink:href="../../assets/svg/icons/wizard-checkout-confirmation.svg#wizardConfirm"></use>
                    </svg>
                </span>
                <span class="bs-stepper-label">Результат</span>
            </button>
        </div>
    </div>
    <div class="bs-stepper-content border-top rounded-0 shadow-none mx-5">
        <div id="wizard-smev-form">
            <!-- Smev request -->
            <div id="smev-request" class="content">
                <div class="row">
                    <!-- Cart left -->
                    <div class="col-xl-8 mb-3 mb-xl-0">
                        <!-- service smev -->
                        <h5>Выберите СМЭВ запрос</h5>
                        <div>
                            <div class="table-fixed-search d-flex justify-content-between align-items-center">
                                <div class="input-group input-group-merge shadow-none">
                                    <span class="input-group-text border-0">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" id="smev-active-table-search" class="form-control" placeholder="Поиск запроса..." aria-label="Поиск услуги..." autocomplete="off">
                                </div>
                            </div>
                            <table class="table table-sm table-bordered cursor-pointer table-hover no-thead" id="smev-active-table"></table>
                        </div>
                    </div>

                    <!-- Cart right -->
                    <div class="col-xl-4">
                        <div class="border-start p-3 pt-0 pb-0 h-100">
                            <div class="d-none smev-information">
                                <!-- provider -->
                                <h6>Услугу предоставляет</h6>
                                <div class="row g-3 my-4">
                                    <div class="col-12 text-center">
                                        <img class="smev-provider-icon" style="height: 85px;" src="" alt="логотип"/>
                                    </div>
                                    <div class="col-12 text-center">
                                        <div class="d-grid">
                                            <p class="m-0 b-s-16 smev-provider-name">{{provider}}}</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- description -->
                                <div class="bg-lighter rounded p-3 mb-4">
                                    <p class="m-0 smev-description">{{description}}</p>
                                </div>

                                <!-- Smev Details -->
                                <h6>О запросе</h6>
                                <dl class="row mb-4">
                                    <dt class="col-6 fw-normal">Дней на выполнение</dt>
                                    <dd class="col-6 text-end smev-reg-days">До {{days}}</dd>
                                </dl>
                                <div class="d-grid pt-3">
                                    <button class="btn btn-primary btn-next"></button>
                                </div>
                            </div>
                            <div class="smev-information">
                                <div class="alert alert-primary" role="alert">
                                    <h6 class="alert-heading mb-1">Запрос не выбран</h6>
                                    <span>Выберите СМЭВ запрос для просмотра информации</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Data -->
            <form onSubmit="return false" id="smev-create-wizard-form" autocomplete="off">
                <div id="smev-data" class="content">
                    <div class="row">
                        <!-- left -->
                        <div class="col-xl-8 mb-3 mb-xl-0" id="smev-data-form-content">
                        </div>
                        <!-- right -->
                        <div class="col-xl-4">
                            <div class="border-start p-3 pt-0 pb-0 h-100">
                                <div class="smev-information">
                                    <!-- provider -->
                                    <h6>Услугу предоставляет</h6>
                                    <div class="row g-3 my-4">
                                        <div class="col-12 text-center">
                                            <img class="smev-provider-icon" style="height: 85px;" src="" alt="логотип" />
                                        </div>
                                        <div class="col-12 text-center">
                                            <div class="d-grid">
                                                <p class="m-0 b-s-16 smev-provider-name">{{provider}}}</p>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- description -->
                                    <div class="bg-lighter rounded p-3 mb-4">
                                        <p class="m-0 smev-description">{{description}}</p>
                                    </div>

                                    <!-- Smev Details -->
                                    <h6>О запросе</h6>
                                    <dl class="row mb-4">
                                        <dt class="col-6 fw-normal">Дней на выполнение</dt>
                                        <dd class="col-6 text-end smev-reg-days">До {{days}}</dd>
                                    </dl>
                                    <div class="row pt-3">
                                        <div class="col-4">
                                            <button class="btn btn-secondary btn-prev w-100"><i class="bi bi-chevron-left"></i> Назад</button>
                                        </div>
                                        <div class="col-8">
                                            <button class="btn btn-success btn-next w-100" id="btn-submit-smev-form">Выполнить запрос <i class="bi bi-chevron-right "></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

            <!-- Result -->
            <div id="smev-result" class="content">
                <div class="row mb-3" style="height: 1210px;">
                    <div class="col-12 col-lg-8 offset-lg-2 text-center mb-3">
                        <iframe style="overflow:hidden;height:100%;width:100%" height="100%" width="100%" src=""></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/vendor/libs/scanner.js/dist/scannerV2.js" type="text/javascript"></script>
<script src="~/assets/js/pages/case-smev-create.js" asp-append-version="true"></script>