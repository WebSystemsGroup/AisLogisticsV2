                            <div class="col-2">
                                <label class="form-label" asp-for="@customer.AddressDetails.House.Oktmo">ОКТМО</label>
                                <input type="text" class="form-control" placeholder="ОКТМО" asp-for="@customer.AddressDetails.House.Oktmo" data-clean>
