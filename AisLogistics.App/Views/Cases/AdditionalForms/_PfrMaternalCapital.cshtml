                <div class="row mb-3">
                    <div class="col-4">
                        <label class="form-label" asp-for="ChildList[0].DocSeries">Серия</label>
                        <input type="text" class="form-control" asp-for="ChildList[0].DocSeries">
                    </div>
                    <div class="col-4">
                        <label class="form-label" asp-for="ChildList[0].DocSeries">Номер</label>
                        <input type="text" class="form-control" asp-for="ChildList[0].DocNumber">
                    </div>
                    <div class="col-4">
                        <label class="form-label" asp-for="ChildList[0].DocIssueDate">Дата выдачи</label>
                        <div class="input-group input-group-merge">
                            <span class="input-group-text">
                                <i class="bi bi-calendar3"></i>
                            </span>
                            <input asp-for="ChildList[0].DocIssueDate" type="text"
                                   class="form-control pickdate">
                        </div>
