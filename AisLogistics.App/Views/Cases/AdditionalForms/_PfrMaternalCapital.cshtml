        <hr />
        <h6 class="my-2 title">Документ</h6>
        <div class="row mb-1 align-items-center">
            <div class="col-7">
                <label class="form-label" asp-for="AppliedDocumentList[0].Name">Наименование</label>
                <input type="text" class="form-control" asp-for="AppliedDocumentList[0].Name">
            </div>
            <div class="col-1">
                <label class="form-label" asp-for="AppliedDocumentList[0].Count">Кол.</label>
                <input type="text" class="form-control" asp-for="AppliedDocumentList[0].Count">
            </div>
            <div class="col-1">
                <button type="button" class="btn btn-danger" onclick="blockRemove(this)"><i class="bi bi-trash bx-sm"></i></button>
            </div>
        </div>
