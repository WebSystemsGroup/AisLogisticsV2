@model AisLogistics.App.Models.AdditionalForms.Municipal._2_2_Model
<div id="additional-data-content">
    <div class="row g-3">
        <div class="col-8 mx-auto">
            <div class="row mb-3">
                <div class="col-12">
                    <label class="form-label" asp-for="Recipient">наименование администрации муниципального образования </label>
                    <input type="text" asp-for="Recipient" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label class="form-label" asp-for="RecipientFio">фамилия и инициалы главы администрации муниципального образования </label>
                    <input type="text" asp-for="RecipientFio" class="form-control">
                </div>
            </div>
            <br/>
            <h5 class="my-2">Заявитель</h5>
            <div class="row mb-3">
                <div class="col-12">
                    <label class="form-label" asp-for="Fio">Ф.И.О.</label>
                    <input type="text" asp-for="Fio" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-10">
                    <label class="form-label" asp-for="ResidenceAddress">Адрес места жительства</label>
                    <input type="text" asp-for="ResidenceAddress" class="form-control">
                </div>
                <div class="col-2">
                    <label class="form-label" asp-for="Agelife">с каго года</label>
                    <input type="number" max="@DateTime.Now.Year" asp-for="Agelife" class="form-control">
                </div>
            </div>
            <hr/>
            <br/>
            <div class="row mb-3">
                <div class="col-12">
                    <label class="form-label" asp-for="Reasons">причины отсутствия жилой площади или необходимости замены ее</label>
                    <input type="text" asp-for="Reasons" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label class="form-label" asp-for="Characteristic">характеристика жилого помещения и занимаемой площади,а также имеют ли заявитель и совместно проживающие с ним члены семьи жилое помещение (или часть его) на праве личной собственности)</label>
                    <textarea asp-for="Characteristic" class="form-control"></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-10">
                    <label class="form-label" asp-for="PlacesWork">наименование места работы</label>
                    <input type="text" asp-for="PlacesWork" class="form-control">
                </div>
                <div class="col-2">
                    <label class="form-label" asp-for="AgeWork">с каго года</label>
                    <input type="number" max="@DateTime.Now.Year" asp-for="AgeWork" class="form-control">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-10">
                    <label class="form-label" asp-for="Post">должность</label>
                    <input type="text" asp-for="Post" class="form-control">
                </div>
                <div class="col-2">
                    <label class="form-label" asp-for="AgePost">с каго года</label>
                    <input type="number" max="@DateTime.Now.Year" asp-for="AgePost" class="form-control">
                </div>
            </div>
            <br/>
            <div class="row mb-3">
                <div class="col-12">
                    <label class="form-label" asp-for="Count_Family">Количество человек в семье</label>
                    <input type="number" min="0" asp-for="Count_Family" class="form-control">
                </div>
            </div>
            <br/>
             <h5 class="my-2">Член семьи проживающие совместно</h5>
            <div id="appliedFamilyCloneList" data-clone-list>
                @for (var i = 0; i < Model.AppliedFamilyList.Length; i++)
                {
                    <div class="g-3" id="clone@(i)" data-id="@i" data-clone>
                        <h6 class="my-2 title">Член семьи @(i+1)</h6>
                        <div class="row mb-1 align-items-end">
                            <div class="col-4">
                                <label  class="form-label" asp-for="AppliedFamilyList[i].Degree_Kinship">Степень родства</label>
                                <input type="text" class="form-control" asp-for="AppliedFamilyList[i].Degree_Kinship">
                            </div>
                            <div class="col-3">
                                <label class="form-label" asp-for="AppliedFamilyList[i].DateB">Дату рождения члена семьи</label>
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text">
                                        <i class="bx bx-calendar"></i>
                                    </span>
                                    <input asp-for="AppliedFamilyList[i].DateB" type="text" class="form-control pickdate">
                                </div>
                            </div>
                            <div class="col-4">
                                <label  class="form-label" asp-for="AppliedFamilyList[i].AgeLife">с каго года проживает совместно</label>
                                <input type="text" class="form-control" asp-for="AppliedFamilyList[i].AgeLife">
                            </div>
                            <div class="col-1">
                                <button type="button" class="btn btn-danger" onclick="blockRemove(this)"><i class="bi bi-trash"></i></button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row justify-content-center">
                <div class="col-2">
                    <button type="button" class="btn btn-primary" id="addFamily"><i class="bi bi-plus"></i></button>
                </div>
            </div>
            
            <hr/>
            <br/>
            <h5 class="my-2">Приложения</h5>
            <div id="appliedDocumentCloneList" data-clone-list>
                @for (var i = 0; i < Model.AppliedDocumentList.Length; i++)
                {
                    <div class="g-3" id="clone@(i)" data-id="@i" data-clone>
                        
                        <h6 class="my-2 title">Приложения @(i+1)</h6>
                        <div class="row mb-1 align-items-end">
                            <div class="col-11">
                                <label class="form-label" asp-for="AppliedDocumentList[i].Name">Наименование</label>
                                <input type="text" class="form-control" list="Docs" asp-for="AppliedDocumentList[i].Name">
                            </div>
                            <div class="col-1">
                                <button type="button" class="btn btn-danger" onclick="blockRemove(this)"><i class="bi bi-trash"></i></button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row justify-content-center">
                <div class="col-2">
                    <button type="button" class="btn btn-primary" id="addDocument"><i class="bi bi-plus"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>


