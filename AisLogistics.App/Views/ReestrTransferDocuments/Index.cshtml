@using AisLogistics.App.Models.DTO.ReestrTransferDocuments
@model ViewModelBuilder
@{
    ViewBag.Title = Model.ViewTitle;
    var data = Model.Model as List<ReestrTransferDocumentsDto>;
    var isView = (bool)ViewBag.CasesAllView;
}

<style>
    .cursor-pointer {
        cursor: pointer;
    }

    .Transfer_Wrapper {
        height: 50rem;
    }

    .transfer-table_Wrapper {
        height: 49rem;
    }

    .casesTransfer_Wrapper {
        height: 43rem;
    }

    .Transfer-menu-column {
        /*       width: 3.5em;
                max-width: 3.5em;*/
    }
</style>

<section>
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-8">
                                    @if (isView)
                                    {
                                        <select id="selectOfficeFilter" class="form-select"><option value="@Guid.Empty">ВСЕ</option>@Html.Raw(ViewBag.Mfc)</select>
                                    }
                                </div>
                                <div class="col-4 text-end">
                                    <a asp-controller="ReestrTransferDocuments" asp-action="TransferDocumentsChangeModalAdd" class="btn btn-primary" data-btn-type="modal" data-bs-toggle="tooltip">Добавить</a>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="Transfer_Wrapper" id="Transfer_Wrapper">
                        @{
                            await Html.RenderPartialAsync("_PartialReestrTransferDocuments", data);
                        }
                    </div>
                </div>
                <div class="col-8">
                    <div class="card" id="empty-table">
                        <div class="card-body">
                            <div class="alert alert-primary m-0" role="alert">
                                <h6 class="alert-heading mb-1">Внимание</h6>
                                <span>Выберите реестр</span>
                            </div>
                        </div>
                    </div>
                    <div class="card transfer-table_Wrapper d-none">
                        <div class="card-header">
                            <h5 class="card-title mb-0" id="card_title"></h5>
                        </div>
                        <span class="border-bottom"></span>
                        <div class="card-body pt-0">
                            <div class="table-responsive casesTransfer_Wrapper" id="casesTransfer_Wrapper"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        const showTable = () => {
            $("#empty-table").hide();
            $(".transfer-table_Wrapper").removeClass("d-none");
        };
        const hiddenTable = () => {
            $("#empty-table").show();
            $(".transfer-table_Wrapper").addClass("d-none");
        };

        $(document).ready(function () {

            $('#selectOfficeFilter').select2({
                language: "ru",
            }).on('change', function () {
                let id = $(this).val();
                $.ajax({
                    url: '/ReestrTransferDocuments/GetReestrTransferDocuments',
                    type: 'POST',
                    data: { officeId: id },
                    beforeSend: () => {
                        $.pageBlock();
                    },
                    complete: () => {
                        $.unblockUI();
                        hiddenTable();
                    },
                    success: function (content) {
                        $('#Transfer_Wrapper').empty();
                        $('#Transfer_Wrapper').html(content);
                    }
                });
            });

            new PerfectScrollbar("#Transfer_Wrapper");
 
        })
    </script>
}

