        //    });
        //})

        $('#btnSearchCasesTransferDocument').on('click', function() { 
            $.ajax({
                type: "Post",
                url: "/ReestrTransferDocuments/TransferDocumentsTable",
                data: {providerId: office.val(), departamentId: departament.val(), serviceId: service.val()},
                beforeSend: () => {
                    $('#tableCasesTransferDocument').empty()
                    $.pageBlock();
                },
                complete: () => {
                    $.unblockUI();
                },
                success: function (result) {
                    $('#tableCasesTransferDocument').append(result);
                },
                error: function (event) {
                }
            });
        });
    });
</script>

