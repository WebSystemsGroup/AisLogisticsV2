@model ViewModelBuilder
@{
    ViewBag.Title = Model.ViewTitle;
    string navId = "details";
    var detailModel = Model.Model as AisLogistics.DataLayer.Common.Dto.Reference.EmployeeModelDto;
}

<!-- table -->
<div class="row directory_names" id="content-datatable">
    <div class="col-auto aside_menu">
        <partial name="Employees/Details/_NavLeft" model="navId" />
    </div>
    <div class="col">
        <div class="directory_names-items popup_container" id="navs-tabs-default">
            <div class="row justify-content-between align-items-center">
                <div class="col">
                    @if (Model.IsVisibleDescription)
                    {
                        <div class="b-s-14">@Model.ViewDescription</div>
                    }
                </div>
                @if (User.HasClaim(AccessKeyNames.ReferenceService, AccessKeyValues.Add))
                {
                    <div class="col-auto pull-right">
                        <a asp-action="EmployeeChangeModal" asp-route-id="@detailModel.Id" asp-route-actiontype="edit" data-btn-type="modal" class="btn btn-primary float-end">
                            <i class="bi bi-pencil-square"></i> Изменить
                        </a>
                    </div>
                }
            </div>
            <div class="row">
                <div class="pt-1">
                    <fieldset>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label">Табельный номер</label>
                                <input type="text" value="@detailModel.EmployeePersonalNumber" class="form-control" readonly>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label">ФИО</label>
                                <input type="text" value="@detailModel.EmployeeName" class="form-control" readonly>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label">Номер телефона</label>
                                <input type="text" value="@detailModel.EmployeePhone" class="form-control" readonly>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label">Почта</label>
                                <input type="text" class="form-control" value="@detailModel.EmployeeEmail" readonly>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                Документ удостоверяющий личность
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6 mb-3">
                                <label class="form-label">Серия</label>
                                <input type="text" value="@detailModel.EmployeeDocSerial" class="form-control" readonly>
                            </div>
                            <div class="col-6 mb-3">
                                <label class="form-label">Номер</label>
                                <input type="text" value="@detailModel.EmployeeDocNumber" class="form-control" readonly>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-3 mb-3">
                                <label class="form-label">Дата выдачи</label>
                                <input type="text" value="@detailModel.EmployeeDocIssueDate?.ToString("dd.MM.yyyy")" class="form-control" readonly>
                            </div>
                            <div class="col-9 mb-3">
                                <label class="form-label">Кем выдан</label>
                                <input type="text" value="@detailModel.EmployeeDocIssuePlace" class="form-control" readonly>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-3 mb-3">
                                <label class="form-label">Дата рождения</label>
                                <input type="text" value="@detailModel.EmployeeDocBirthDate?.ToString("dd.MM.yyyy")" class="form-control" readonly>
                            </div>
                            <div class="col-9 mb-3">
                                <label class="form-label">Место рождения</label>
                                <input type="text" value="@detailModel.EmployeeDocBirthPlace" class="form-control" readonly>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6 mb-3">
                                <label class="form-label">СНИЛС</label>
                                <input type="text" value="@detailModel.EmployeeSnils" class="form-control" readonly>
                            </div>
                            <div class="col-6 mb-3">
                                <label class="form-label">ИНН</label>
                                <input type="text" value="@detailModel.EmployeeInn" class="form-control" readonly>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label">Номер сертификата</label>
                                <input type="text" value="@detailModel.EmployeeCertificateNumber" class="form-control" readonly>
                            </div>
                        </div>

                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ table -->