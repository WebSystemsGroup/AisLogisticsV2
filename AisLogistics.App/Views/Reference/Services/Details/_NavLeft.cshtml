    <nav-tab id="waysget" target="@Url.Action("ServiceWaysGet", "Reference", new { id = Id, wt = (int)ServiceWayGetType.ForService })">Способы обращения</nav-tab>
    <nav-tab id="reasons" target="@Url.Action("ServiceReasons", "Reference", new { id = Id, rt = (int)ServiceReasonType.Accept })">Основания</nav-tab>
