    <nav-tab id="procedures" target="@Url.Action("ServiceProcedures", "Reference", new { id = Id })">Процедуры</nav-tab>
    <nav-tab id="customers" target="@Url.Action("ServiceCustomers", "Reference", new { id = Id })">Получатели</nav-tab>
    <nav-tab id="documents" target="@Url.Action("ServiceDocuments", "Reference", new { id = Id })">Документы</nav-tab>
    <nav-tab id="results" target="@Url.Action("ServiceDocumentsResults", "Reference", new { id = Id })">Результаты</nav-tab>
    <nav-tab id="smev" target="@Url.Action("ServiceSmev", "Reference", new { id = Id })">СМЭВ</nav-tab>
    <nav-tab id="tariffs" target="@Url.Action("ServiceTariffs", "Reference", new { id = Id })">Тарифы</nav-tab>
    <nav-tab id="stages" target="@Url.Action("ServiceStages", "Reference", new { id = Id })">Этапы</nav-tab>
    <nav-tab id="blancs" target="@Url.Action("BlancsFiles", "Reference", new { id = Id })">Бланки</nav-tab>
